@model IEnumerable<PizzaHub.Entities.Item>;
@{
    ViewData["Title"] = "Home Page";
    Layout = "_PublicLayout";
}

<div style="background:#1a5ca3">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 text-white" style="width: 100%">
                <div class="pt-5 pb-5">
                    <h1>PizzaHub's Online Ordering</h1>
                    <p class="pb-4">
                        Yummy pizza  will be delivered fast at your door step!
                    </p>
                    <p>
                        <a href="#heading" class="btn btn-success">ORDER ONLINE NOW </a>
                    </p>
                </div>
            </div>
            <div class="col-sm-4 pt-4">
                <img src="~/images/pizza-header.png" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<div class="container pb-4">
    <div class="row pt-4">
        <h2 class="col-sm-12 mb-4">Pizza, Dessert, Beverages</h2>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 pb-4">
                <div class="card box-shadow">
                    <img class="card-img-top" src="@item.ImageUrl" alt="image" style="width: 100%" />
                    <div class="card-body">
                        <h4 class="card-title">@item.Name
                            <span class="float-right font-20">₹@item.UnitPrice.ToString("##.#")</span>
                        </h4>
                        <p class="card-text">@item.Description</p>
                        <p>
                            <span class="pt-1 d-inline-block">Size: Regular</span>
                            <span class="float-right font-20">
                                <a href="javascript:void(0)" onclick="AddToCart('@item.Id', '@item.Name', '@item.UnitPrice', 1)" class="btn btn-outline-primary">Add To Cart</a>
                            </span>

                        </p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>